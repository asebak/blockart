extends ../layout

block content
  .page-header
    h3 #{data.title}
    br
    img(id="imgcontrol", src=data.pic, width="50%", height="50%")
    if user
      if user.addressId !== data.userId
        form.form-horizontal(, action='/donate', method='POST')
            input(type='hidden', name='_csrf', value=_csrf)
            .form-group
                label.col-sm-3.control-label(for='toUserId') To
                .col-sm-7
                  input.form-control(type='text', name='toUserId', required, value=data.userId, readonly)
            .form-group
                label.col-sm-3.control-label(for='amount') Amount
                .col-sm-7
                  input.form-control(type='number', name='amount', , required, value=0)
            .form-group
              .col-sm-offset-3.col-sm-4
                a(data-toggle="modal" href="#passwordModal" class="btn btn-primary") Donate

      include ../partials/passwordconfirm

